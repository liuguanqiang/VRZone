<Window x:Class="VRZoneUpdater.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRZoneUpdater"
        mc:Ignorable="d"
        Title="VRZone更新程序"  MinHeight="600" MinWidth="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="tb_version" Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right" Text="V0.0.1"/>
        <TextBlock Name="tb_title" Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <ProgressBar Name="pb" Margin="20" Grid.Row="1"/>
        <TextBox Name="tb_log" Margin="10" Grid.Row="2"/>
    </Grid>
</Window>
