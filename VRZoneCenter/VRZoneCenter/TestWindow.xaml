<Window x:Class="VRZoneCenter.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRZoneCenter"
        mc:Ignorable="d"
        Title="TestWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="80">
            <Button Name="bt_startUpdate" Content="开始更新" Height="60" Margin="10" Click="bt_startUpdate_Click"/>
            <Button Name="bt_pauseUpdate" Content="暂停更新" Height="60" Margin="10" Click="bt_pauseUpdate_Click"/>
        </StackPanel>
        <TextBox Grid.Row="1" MaxLines="1920" Name="tb_log"/>

    </Grid>
</Window>
